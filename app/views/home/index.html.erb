<div class="card">
  <span class="card-curtain"></span>
  <div class="card-main">
    <div class="card-side font-bold-italic">
      <h3>Samuel, Lisboa 08 / 2019 - </h3>
    </div>
    <div class="card-center-title">
      <h1 class="font-bold">Brussels</h1>
    </div>
    <div class="card-menu">
      <%= link_to root_path, class: "logo btn" do %>
        <%= svg_icon("guitar-logo") %>
      <% end %>
    </div>
    <div class="card-bottom">
      <span class="option btn">
        <%= link_to gallery_path, class: "icon" do %>
          <%= svg_icon("gallery") %>
        <% end %>
        <span class="tootlip">
          gallery
        </span>
      </span>
      <span class="option btn">
        <%= link_to about_path, class: "icon" do %>
          <%= svg_icon("about") %>
        <% end %>
        <span class="tootlip">
          about us
        </span>
      </span>
      <span class="option btn">
        <%= link_to schedule_path, class: "icon" do %>
          <%= svg_icon("calendar") %>
        <% end %>
        <span class="tootlip">
          schedule
        </span>
      </span>
    </div>
  </div>
</div>
